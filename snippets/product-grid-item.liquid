<div class="product product__product-grid-item {% if template == 'index' %}{% if settings.homepage_listing_cols == '2' %}col-sm-6 {% cycle 'step2' : 'product_alpha', '' %}{% elsif settings.homepage_listing_cols == '3' %}col-sm-4 {% cycle 'step3' : 'product_alpha', '', '' %}{% elsif settings.homepage_listing_cols == '4' %}col-sm-3 {% cycle 'step4' : 'product_alpha', '', '', '' %}{% endif %}{% else %}{% if settings.collection_listing_cols == '2' %}col-sm-6 {% cycle 'step2' : 'product_alpha', '' %}{% elsif settings.collection_listing_cols == '3' %}col-sm-4 {% cycle 'step3' : 'product_alpha', '', '' %}{% elsif settings.collection_listing_cols == '4' %}col-sm-3 {% cycle 'step4' : 'product_alpha', '', '', '' %}{% endif %}{% endif %}">
<div>
    <div class="product_img">  
        <a href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | product_img_url: image_size }}" alt="{{ product.featured_image.alt | escape }}" />
        </a>
    </div>

    <div class="product_name">
        <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
    </div>

    <div class="product_desc">{{ product.description | strip_html | truncate: 80 }}</div>

    <div class="product_price clearfix">
        {% if product.price_varies %}From{% endif %}
        <span class="money">{{ product.price | money }}</span>
		{% include "snippet-add-to-cart" %}
    </div>
 
</div>
</div>